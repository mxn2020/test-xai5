# Database
DATABASE_URL="mongodb://localhost:27017/vite-react-mongo"
MONGODB_URI="mongodb://localhost:27017/vite-react-mongo"
# For MongoDB Atlas, use format: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# Application
VITE_APP_URL="http://localhost:5176"
VITE_APP_NAME="Vite React MongoDB App"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Modern React app with Vite, MongoDB, and Prisma"

# API Configuration
VITE_API_URL="http://localhost:5176/api"
VITE_API_BASE_URL="http://localhost:5176"

# Netlify Functions (if using Netlify)
NETLIFY_FUNCTIONS_URL="/api"

# Development
NODE_ENV="development"
PORT=5176

# Optional: JWT Secret for authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Optional: CORS settings
CORS_ORIGIN="http://localhost:5176"

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

VITE_GEENIUS_API_URL=http://localhost:8888
VITE_APP_VERSION=1.0.0
VITE_REPOSITORY_URL=https://github.com/mxn2020/geenius-template-vite-react-mongo
VITE_BASE_BRANCH=main

# Better Auth Configuration
BETTER_AUTH_SECRET="your-secret-key-here-change-this-in-production-min-32-chars"
BETTER_AUTH_URL="http://localhost:5176"
